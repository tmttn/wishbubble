// WishBubble Database Schema
// A group-first wishlist platform for Secret Santa events

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// USER & AUTHENTICATION
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  passwordHash  String?
  name          String?
  image         String?   // Required by NextAuth PrismaAdapter
  avatarUrl     String?   // Legacy field, can be removed if not used elsewhere

  // Preferences - General
  locale       String  @default("en")
  notifyEmail  Boolean @default(true)
  notifyInApp  Boolean @default(true)
  notifyPush   Boolean @default(false) // Push notifications (requires subscription)
  notifyDigest Boolean @default(true)
  digestDay    Int     @default(0)

  // Preferences - Fine-grained email notifications
  emailOnMemberJoined    Boolean @default(true)
  emailOnSecretSantaDraw Boolean @default(true)
  emailOnEventReminder   Boolean @default(true)
  emailOnWishlistReminder Boolean @default(true)

  // Subscription
  subscriptionTier SubscriptionTier @default(FREE)
  subscriptionEnds DateTime?
  stripeCustomerId String?

  // Admin
  isAdmin Boolean @default(false)

  // Beta Testing Program
  isBetaTester  Boolean   @default(false)
  betaOptInAt   DateTime?

  // Suspension
  suspendedAt      DateTime?
  suspendedUntil   DateTime? // null = permanent
  suspensionReason String?
  suspendedBy      String?   // admin user ID

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  lastLoginAt DateTime?

  // Relations
  accounts              Account[]
  sessions              Session[]
  wishlists             Wishlist[]
  bubbleMemberships     BubbleMember[]
  ownedBubbles          Bubble[]          @relation("BubbleOwner")
  claims                Claim[]
  secretSantaGiving     SecretSantaDraw[] @relation("Giver")
  secretSantaReceiving  SecretSantaDraw[] @relation("Receiver")
  invitationsSent       Invitation[]
  notifications         Notification[]
  activities            Activity[]
  subscription          Subscription?
  bubbleAccessLogs      BubbleAccessLog[]
  pushSubscriptions     PushSubscription[]
  bubbleMessages        BubbleMessage[]

  @@index([email])
  @@index([deletedAt])
}

enum SubscriptionTier {
  FREE
  PREMIUM
  FAMILY
}

// ============================================
// SUBSCRIPTIONS & BILLING
// ============================================

model Subscription {
  id     String @id @default(cuid())
  userId String @unique

  // Stripe data
  stripeSubscriptionId String  @unique
  stripePriceId        String
  stripeProductId      String

  // Subscription details
  status         SubscriptionStatus @default(ACTIVE)
  tier           SubscriptionTier   @default(PREMIUM)
  interval       BillingInterval    @default(MONTHLY)

  // Trial info
  trialEndsAt    DateTime?

  // Billing period
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  cancelAtPeriodEnd  Boolean  @default(false)

  // Timestamps
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  canceledAt DateTime?

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@index([stripeSubscriptionId])
  @@index([userId])
  @@index([status])
}

enum SubscriptionStatus {
  ACTIVE
  TRIALING
  PAST_DUE
  CANCELED
  UNPAID
  INCOMPLETE
  INCOMPLETE_EXPIRED
  PAUSED
}

enum BillingInterval {
  MONTHLY
  YEARLY
}

model Transaction {
  id             String @id @default(cuid())
  subscriptionId String?
  userId         String

  // Stripe data
  stripePaymentIntentId String? @unique
  stripeInvoiceId       String? @unique

  // Amount
  amount   Int    // In cents
  currency String @default("eur")

  // Status
  status TransactionStatus @default(PENDING)
  type   TransactionType   @default(PAYMENT)

  // Metadata
  description String?
  metadata    Json?

  // Timestamps
  createdAt   DateTime  @default(now())
  completedAt DateTime?
  failedAt    DateTime?

  subscription Subscription? @relation(fields: [subscriptionId], references: [id], onDelete: SetNull)

  @@index([subscriptionId])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
  DISPUTED
}

enum TransactionType {
  PAYMENT
  REFUND
  CREDIT
}

model Coupon {
  id   String @id @default(cuid())
  code String @unique

  // Discount details
  discountType   DiscountType
  discountAmount Int          // Percentage (0-100) or amount in cents

  // Applies to
  appliesToTiers  SubscriptionTier[] @default([PREMIUM])
  appliesToInterval BillingInterval[]  @default([MONTHLY, YEARLY])

  // Duration
  duration       CouponDuration @default(ONCE)
  durationMonths Int?           // For REPEATING duration

  // Limits
  maxRedemptions Int?
  redemptionCount Int @default(0)

  // Validity
  validFrom  DateTime  @default(now())
  validUntil DateTime?
  isActive   Boolean   @default(true)

  // Stripe integration
  stripeCouponId String? @unique

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  redemptions CouponRedemption[]

  @@index([code])
  @@index([isActive])
  @@index([validUntil])
}

enum DiscountType {
  PERCENTAGE
  FIXED_AMOUNT
}

enum CouponDuration {
  ONCE
  REPEATING
  FOREVER
}

model CouponRedemption {
  id       String @id @default(cuid())
  couponId String
  userId   String

  // Discount applied
  discountAmount Int // Actual discount in cents

  redeemedAt DateTime @default(now())

  coupon Coupon @relation(fields: [couponId], references: [id], onDelete: Cascade)

  @@unique([couponId, userId]) // One redemption per user per coupon
  @@index([couponId])
  @@index([userId])
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  createdAt DateTime @default(now())

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@index([token])
}

// ============================================
// BUBBLES (GROUPS)
// ============================================

model Bubble {
  id          String  @id @default(cuid())
  name        String
  description String? @db.Text
  slug        String  @unique

  // Event details
  occasionType OccasionType
  eventDate    DateTime?

  // Settings
  budgetMin            Decimal? @db.Decimal(10, 2)
  budgetMax            Decimal? @db.Decimal(10, 2)
  currency             String   @default("EUR")
  isSecretSanta        Boolean  @default(false)
  secretSantaDrawn     Boolean  @default(false)
  secretSantaDrawDate  DateTime? // Scheduled date for automatic draw
  allowExternalLinks   Boolean  @default(true)
  allowMemberWishlists Boolean  @default(true) // false = registry mode (only owner/admin can add wishlists)
  maxMembers           Int      @default(10)
  isPublic             Boolean  @default(false)
  revealGivers         Boolean  @default(true)

  // Theme/Customization
  themeColor    String?
  coverImageUrl String?

  // Post-event processing
  postEventProcessed Boolean @default(false)

  // Invite link
  inviteCode String? @unique

  // Public sharing (view-only, separate from invite)
  shareCode    String?  @unique
  shareEnabled Boolean  @default(false)

  // Ownership
  ownerId String
  owner   User   @relation("BubbleOwner", fields: [ownerId], references: [id])

  // Timestamps
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  archivedAt DateTime?

  // Relations
  members          BubbleMember[]
  wishlists        BubbleWishlist[]
  secretSantaDraws SecretSantaDraw[]
  invitations      Invitation[]
  claims           Claim[]
  activities       Activity[]
  exclusions       SecretSantaExclusion[]
  accessLogs       BubbleAccessLog[]
  messages         BubbleMessage[]

  @@index([ownerId])
  @@index([slug])
  @@index([eventDate])
  @@index([archivedAt])
}

enum OccasionType {
  CHRISTMAS
  BIRTHDAY
  SINTERKLAAS
  WEDDING
  BABY_SHOWER
  GRADUATION
  HOUSEWARMING
  OTHER
}

model BubbleMember {
  id       String     @id @default(cuid())
  bubbleId String
  userId   String
  role     BubbleRole @default(MEMBER)

  notifyActivity Boolean @default(true)

  // Personal PIN Protection (for Secret Santa privacy - protects your device from others)
  pinHash      String?   // bcrypt hash of 4-6 digit PIN
  pinEnabledAt DateTime? // when PIN protection was enabled

  // Chat read tracking for unread indicators
  lastReadAt DateTime? // when user last read the chat

  joinedAt  DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  leftAt    DateTime?

  bubble Bubble @relation(fields: [bubbleId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([bubbleId, userId])
  @@index([bubbleId])
  @@index([userId])
}

enum BubbleRole {
  OWNER
  ADMIN
  MEMBER
}

// ============================================
// WISHLISTS
// ============================================

model Wishlist {
  id          String  @id @default(cuid())
  userId      String
  name        String  @default("My Wishlist")
  description String? @db.Text
  isDefault   Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  items   WishlistItem[]
  bubbles BubbleWishlist[]

  @@index([userId])
}

model BubbleWishlist {
  id         String @id @default(cuid())
  bubbleId   String
  wishlistId String

  isVisible Boolean @default(true)

  attachedAt DateTime  @default(now())
  updatedAt  DateTime? @updatedAt

  bubble   Bubble   @relation(fields: [bubbleId], references: [id], onDelete: Cascade)
  wishlist Wishlist @relation(fields: [wishlistId], references: [id], onDelete: Cascade)

  @@unique([bubbleId, wishlistId])
  @@index([bubbleId])
  @@index([wishlistId])
  @@index([bubbleId, isVisible]) // Composite index for visible wishlist queries
}

model WishlistItem {
  id         String @id @default(cuid())
  wishlistId String

  title       String
  description String? @db.Text

  price    Decimal? @db.Decimal(10, 2)
  priceMax Decimal? @db.Decimal(10, 2)
  currency String   @default("EUR")

  url      String? @db.Text
  imageUrl String?
  uploadedImage String? // Vercel Blob URL for user-uploaded images

  priority  ItemPriority @default(NICE_TO_HAVE)
  quantity  Int          @default(1)
  category  String?
  notes     String?      @db.Text

  sortOrder Int @default(0)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  wishlist Wishlist @relation(fields: [wishlistId], references: [id], onDelete: Cascade)
  claims   Claim[]

  @@index([wishlistId])
  @@index([deletedAt])
}

enum ItemPriority {
  MUST_HAVE
  NICE_TO_HAVE
  DREAM
}

// ============================================
// CLAIMS (THE SECRET SAUCE)
// ============================================

model Claim {
  id       String @id @default(cuid())
  itemId   String
  userId   String
  bubbleId String

  status   ClaimStatus @default(CLAIMED)
  quantity Int         @default(1)

  isGroupGift  Boolean  @default(false)
  contribution Decimal? @db.Decimal(10, 2)

  claimedAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
  purchasedAt DateTime?
  unclaimedAt DateTime?

  expiresAt DateTime?

  item   WishlistItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  user   User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  bubble Bubble       @relation(fields: [bubbleId], references: [id], onDelete: Cascade)

  @@index([itemId])
  @@index([userId])
  @@index([bubbleId])
  @@index([status])
}

enum ClaimStatus {
  CLAIMED
  PURCHASED
  UNCLAIMED
}

// ============================================
// SECRET SANTA
// ============================================

model SecretSantaDraw {
  id         String @id @default(cuid())
  bubbleId   String
  giverId    String
  receiverId String

  excludedUserIds String[]

  drawnAt   DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  viewedAt  DateTime?

  bubble   Bubble @relation(fields: [bubbleId], references: [id], onDelete: Cascade)
  giver    User   @relation("Giver", fields: [giverId], references: [id])
  receiver User   @relation("Receiver", fields: [receiverId], references: [id])

  @@unique([bubbleId, giverId])
  @@unique([bubbleId, receiverId])
  @@index([bubbleId])
  @@index([giverId])
}

model SecretSantaExclusion {
  id       String @id @default(cuid())
  bubbleId String
  userId1  String
  userId2  String

  createdAt DateTime @default(now())

  bubble Bubble @relation(fields: [bubbleId], references: [id], onDelete: Cascade)

  @@unique([bubbleId, userId1, userId2])
  @@index([bubbleId])
}

// ============================================
// BUBBLE ACCESS LOGGING (Privacy Protection)
// ============================================

model BubbleAccessLog {
  id       String @id @default(cuid())
  bubbleId String
  userId   String

  // Device info
  deviceId   String  // fingerprint hash of device characteristics
  deviceName String? // e.g., "Chrome on Windows", "Safari on iPhone"
  ipAddress  String?

  // Access details
  accessedAt  DateTime @default(now())
  pinVerified Boolean  @default(false) // whether PIN was verified for this access

  bubble Bubble @relation(fields: [bubbleId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([bubbleId])
  @@index([userId])
  @@index([deviceId])
  @@index([accessedAt])
  @@index([bubbleId, userId, deviceId]) // for checking known devices
}

// ============================================
// INVITATIONS
// ============================================

model Invitation {
  id        String @id @default(cuid())
  bubbleId  String
  email     String
  invitedBy String

  token  String           @unique @default(cuid())
  status InvitationStatus @default(PENDING)

  sentAt     DateTime  @default(now())
  updatedAt  DateTime? @updatedAt
  expiresAt  DateTime
  acceptedAt DateTime?

  bubble  Bubble @relation(fields: [bubbleId], references: [id], onDelete: Cascade)
  inviter User   @relation(fields: [invitedBy], references: [id])

  @@index([bubbleId])
  @@index([email])
  @@index([token])
  @@index([status, expiresAt]) // Composite index for pending invitation queries
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
  CANCELLED
}

// ============================================
// NOTIFICATIONS
// ============================================

model Notification {
  id     String @id @default(cuid())
  userId String

  type  NotificationType
  title String
  body  String           @db.Text

  bubbleId String?
  itemId   String?

  data Json?

  readAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([readAt])
  @@index([createdAt])
}

enum NotificationType {
  BUBBLE_INVITATION
  MEMBER_JOINED
  WISHLIST_ADDED
  REMINDER_ADD_WISHLIST
  EVENT_APPROACHING
  EVENT_COMPLETED
  SECRET_SANTA_DRAWN
  ITEM_CLAIMED
  WEEKLY_DIGEST
  GROUP_DELETED
  BUBBLE_ACCESSED  // New device accessed a Secret Santa bubble
  BUBBLE_MESSAGE   // New message in bubble chat
  SYSTEM
}

// ============================================
// ACTIVITY FEED
// ============================================

model Activity {
  id       String  @id @default(cuid())
  bubbleId String?
  userId   String?

  type     ActivityType
  metadata Json?

  createdAt DateTime @default(now())

  bubble Bubble? @relation(fields: [bubbleId], references: [id], onDelete: Cascade)
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([bubbleId])
  @@index([userId])
  @@index([createdAt])
  @@index([type])
}

enum ActivityType {
  // Auth events
  USER_REGISTERED
  USER_LOGIN
  USER_LOGOUT
  EMAIL_VERIFIED
  EMAIL_CHANGE_REQUESTED
  EMAIL_CHANGED
  PASSWORD_RESET_REQUESTED
  PASSWORD_RESET_COMPLETED
  VERIFICATION_EMAIL_RESENT

  // Member events
  MEMBER_JOINED
  MEMBER_LEFT
  MEMBER_REMOVED
  MEMBER_INVITED
  MEMBER_ROLE_CHANGED
  OWNERSHIP_TRANSFERRED

  // Wishlist events
  WISHLIST_CREATED
  WISHLIST_ATTACHED
  WISHLIST_DETACHED
  ITEM_ADDED
  ITEM_UPDATED
  ITEM_DELETED

  // Claim events
  ITEM_CLAIMED
  ITEM_UNCLAIMED
  ITEM_PURCHASED

  // Group events
  GROUP_CREATED
  GROUP_UPDATED
  GROUP_DELETED
  GROUP_ARCHIVED
  SECRET_SANTA_DRAWN
  SECRET_SANTA_RESET

  // System events
  EVENT_APPROACHING
  EVENT_COMPLETED
  RATE_LIMIT_EXCEEDED

  // Subscription events
  SUBSCRIPTION_CREATED
  SUBSCRIPTION_UPGRADED
  SUBSCRIPTION_DOWNGRADED
  SUBSCRIPTION_CANCELED
  SUBSCRIPTION_RENEWED
  PAYMENT_SUCCEEDED
  PAYMENT_FAILED
  TRIAL_STARTED
  TRIAL_ENDED
  COUPON_APPLIED

  // Admin moderation events
  USER_SUSPENDED
  USER_UNSUSPENDED
  USER_DELETED_BY_ADMIN
}

// ============================================
// ADMIN & SYSTEM
// ============================================

model FeatureFlag {
  id          String  @id @default(cuid())
  key         String  @unique
  description String?

  enabled    Boolean  @default(false)
  enabledFor String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ScrapedProduct {
  id  String @id @default(cuid())
  url String @unique

  title       String?
  description String?  @db.Text
  price       Decimal? @db.Decimal(10, 2)
  currency    String?
  imageUrl    String?

  scrapedAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  expiresAt DateTime

  @@index([url])
  @@index([expiresAt])
}

// ============================================
// CONTACT SUBMISSIONS
// ============================================

model ContactSubmission {
  id String @id @default(cuid())

  name    String
  email   String
  subject ContactSubject
  message String         @db.Text
  locale  String         @default("en") // Language used when submitting the form

  // Metadata for spam protection
  ipAddress      String?
  userAgent      String?
  recaptchaScore Float?

  // Status tracking
  status    ContactStatus @default(NEW)
  handledBy String?
  handledAt DateTime?

  // Comment log for admin notes and replies
  comments ContactComment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
  @@index([email])
}

model ContactComment {
  id           String @id @default(cuid())
  submissionId String
  authorId     String
  authorName   String
  content      String @db.Text
  type         ContactCommentType @default(NOTE)

  createdAt DateTime @default(now())

  submission ContactSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  @@index([submissionId])
}

enum ContactCommentType {
  NOTE
  REPLY
}

enum ContactSubject {
  PRIVACY_REQUEST
  DATA_DELETION
  DATA_EXPORT
  BUG_REPORT
  FEATURE_REQUEST
  GENERAL_INQUIRY
  OTHER
}

enum ContactStatus {
  NEW
  IN_PROGRESS
  RESOLVED
  SPAM
}

// ============================================
// PRODUCT SEARCH & FEEDS
// ============================================

model ProductProvider {
  id         String       @id @default(cuid())
  providerId String       @unique // e.g., "bolcom", "amazon", "awin_coolblue"
  name       String
  type       ProviderType

  enabled  Boolean @default(true)
  priority Int     @default(0) // Higher = shown first in results

  // For feed providers
  feedUrl      String?
  lastSynced   DateTime?
  syncStatus   SyncStatus @default(PENDING)
  syncError    String?
  productCount Int        @default(0)

  // Affiliate configuration
  affiliateCode   String? // Query param value to append (e.g., "ref=mysite" or just "mysite")
  affiliateParam  String? // Query param name (e.g., "tag", "ref", "aff"). If not set, affiliateCode is appended as-is
  urlPatterns     String? // Comma-separated URL patterns to match (e.g., "coolblue.nl,coolblue.be")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products FeedProduct[]

  @@index([type])
  @@index([enabled])
}

enum ProviderType {
  REALTIME // API-based (Bol.com, Amazon)
  FEED     // CSV/file import (Awin)
  SCRAPER  // URL scraping fallback
}

enum SyncStatus {
  PENDING
  SYNCING
  SUCCESS
  FAILED
}

model FeedProduct {
  id         String @id @default(cuid())
  providerId String

  // Product identification
  externalId String  // Provider's product ID
  ean        String? // European Article Number

  // Core product data
  title       String
  description String? @db.Text
  brand       String?
  category    String?

  // Pricing
  price         Decimal? @db.Decimal(10, 2)
  currency      String   @default("EUR")
  originalPrice Decimal? @db.Decimal(10, 2)

  // URLs & Media
  url          String  @db.Text
  affiliateUrl String? @db.Text
  imageUrl     String?

  // Availability
  availability ProductAvailability @default(UNKNOWN)

  // Searchable text (for full-text search)
  searchText String @db.Text // Concatenated title + description + brand for search

  // Metadata
  rawData Json? // Original feed data for debugging

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  provider ProductProvider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@unique([providerId, externalId])
  @@index([providerId])
  @@index([ean])
  @@index([title])
  @@index([category])
  @@index([price])
}

enum ProductAvailability {
  IN_STOCK
  OUT_OF_STOCK
  UNKNOWN
}

// ============================================
// ANNOUNCEMENTS (What's New)
// ============================================

model Announcement {
  id          String   @id @default(cuid())

  // Content (stored per locale)
  titleEn     String
  titleNl     String
  bodyEn      String   @db.Text
  bodyNl      String   @db.Text

  // Optional rich content
  imageUrl    String?
  ctaLabel    String?  // e.g., "Learn more"
  ctaUrl      String?  // e.g., link to docs or feature

  // Targeting
  targetTiers SubscriptionTier[] @default([FREE, PREMIUM, FAMILY])

  // Scheduling
  publishedAt DateTime?
  expiresAt   DateTime?

  // Status
  isActive      Boolean  @default(true)
  isReleaseNote Boolean  @default(false) // If true, shown on public release notes page

  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  dismissals  AnnouncementDismissal[]

  @@index([isActive, publishedAt])
  @@index([expiresAt])
}

model AnnouncementDismissal {
  id             String   @id @default(cuid())
  announcementId String
  userId         String

  dismissedAt    DateTime @default(now())

  announcement   Announcement @relation(fields: [announcementId], references: [id], onDelete: Cascade)

  @@unique([announcementId, userId])
  @@index([userId])
}

model FeedImportLog {
  id         String @id @default(cuid())
  providerId String

  // Import details
  fileName        String?
  fileSize        Int?
  recordsTotal    Int          @default(0)
  recordsImported Int          @default(0)
  recordsFailed   Int          @default(0)

  // Status
  status       ImportStatus @default(PENDING)
  errorMessage String?      @db.Text

  // Audit
  importedBy String // User ID

  // Timing
  startedAt   DateTime  @default(now())
  completedAt DateTime?

  @@index([providerId])
  @@index([status])
  @@index([startedAt])
}

enum ImportStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

