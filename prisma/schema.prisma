// WishBubble Database Schema
// A group-first wishlist platform for Secret Santa events

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// USER & AUTHENTICATION
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  passwordHash  String?
  name          String?
  image         String?   // Required by NextAuth PrismaAdapter
  avatarUrl     String?   // Legacy field, can be removed if not used elsewhere

  // Preferences - General
  locale       String  @default("en")
  notifyEmail  Boolean @default(true)
  notifyInApp  Boolean @default(true)
  notifyDigest Boolean @default(true)
  digestDay    Int     @default(0)

  // Preferences - Fine-grained email notifications
  emailOnMemberJoined    Boolean @default(true)
  emailOnSecretSantaDraw Boolean @default(true)
  emailOnEventReminder   Boolean @default(true)
  emailOnWishlistReminder Boolean @default(true)

  // Subscription
  subscriptionTier SubscriptionTier @default(FREE)
  subscriptionEnds DateTime?
  stripeCustomerId String?

  // Admin
  isAdmin Boolean @default(false)

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  lastLoginAt DateTime?

  // Relations
  accounts              Account[]
  sessions              Session[]
  wishlists             Wishlist[]
  bubbleMemberships     BubbleMember[]
  ownedBubbles          Bubble[]          @relation("BubbleOwner")
  claims                Claim[]
  secretSantaGiving     SecretSantaDraw[] @relation("Giver")
  secretSantaReceiving  SecretSantaDraw[] @relation("Receiver")
  invitationsSent       Invitation[]
  notifications         Notification[]
  activities            Activity[]
  subscription          Subscription?

  @@index([email])
  @@index([deletedAt])
}

enum SubscriptionTier {
  FREE
  PREMIUM
  FAMILY
}

// ============================================
// SUBSCRIPTIONS & BILLING
// ============================================

model Subscription {
  id     String @id @default(cuid())
  userId String @unique

  // Stripe data
  stripeSubscriptionId String  @unique
  stripePriceId        String
  stripeProductId      String

  // Subscription details
  status         SubscriptionStatus @default(ACTIVE)
  tier           SubscriptionTier   @default(PREMIUM)
  interval       BillingInterval    @default(MONTHLY)

  // Trial info
  trialEndsAt    DateTime?

  // Billing period
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  cancelAtPeriodEnd  Boolean  @default(false)

  // Timestamps
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  canceledAt DateTime?

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@index([stripeSubscriptionId])
  @@index([userId])
  @@index([status])
}

enum SubscriptionStatus {
  ACTIVE
  TRIALING
  PAST_DUE
  CANCELED
  UNPAID
  INCOMPLETE
  INCOMPLETE_EXPIRED
  PAUSED
}

enum BillingInterval {
  MONTHLY
  YEARLY
}

model Transaction {
  id             String @id @default(cuid())
  subscriptionId String?
  userId         String

  // Stripe data
  stripePaymentIntentId String? @unique
  stripeInvoiceId       String? @unique

  // Amount
  amount   Int    // In cents
  currency String @default("eur")

  // Status
  status TransactionStatus @default(PENDING)
  type   TransactionType   @default(PAYMENT)

  // Metadata
  description String?
  metadata    Json?

  // Timestamps
  createdAt   DateTime  @default(now())
  completedAt DateTime?
  failedAt    DateTime?

  subscription Subscription? @relation(fields: [subscriptionId], references: [id], onDelete: SetNull)

  @@index([subscriptionId])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
  DISPUTED
}

enum TransactionType {
  PAYMENT
  REFUND
  CREDIT
}

model Coupon {
  id   String @id @default(cuid())
  code String @unique

  // Discount details
  discountType   DiscountType
  discountAmount Int          // Percentage (0-100) or amount in cents

  // Applies to
  appliesToTiers  SubscriptionTier[] @default([PREMIUM])
  appliesToInterval BillingInterval[]  @default([MONTHLY, YEARLY])

  // Duration
  duration       CouponDuration @default(ONCE)
  durationMonths Int?           // For REPEATING duration

  // Limits
  maxRedemptions Int?
  redemptionCount Int @default(0)

  // Validity
  validFrom  DateTime  @default(now())
  validUntil DateTime?
  isActive   Boolean   @default(true)

  // Stripe integration
  stripeCouponId String? @unique

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  redemptions CouponRedemption[]

  @@index([code])
  @@index([isActive])
  @@index([validUntil])
}

enum DiscountType {
  PERCENTAGE
  FIXED_AMOUNT
}

enum CouponDuration {
  ONCE
  REPEATING
  FOREVER
}

model CouponRedemption {
  id       String @id @default(cuid())
  couponId String
  userId   String

  // Discount applied
  discountAmount Int // Actual discount in cents

  redeemedAt DateTime @default(now())

  coupon Coupon @relation(fields: [couponId], references: [id], onDelete: Cascade)

  @@unique([couponId, userId]) // One redemption per user per coupon
  @@index([couponId])
  @@index([userId])
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  createdAt DateTime @default(now())

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@index([token])
}

// ============================================
// BUBBLES (GROUPS)
// ============================================

model Bubble {
  id          String  @id @default(cuid())
  name        String
  description String? @db.Text
  slug        String  @unique

  // Event details
  occasionType OccasionType
  eventDate    DateTime?

  // Settings
  budgetMin          Decimal? @db.Decimal(10, 2)
  budgetMax          Decimal? @db.Decimal(10, 2)
  currency           String   @default("EUR")
  isSecretSanta      Boolean  @default(false)
  secretSantaDrawn   Boolean  @default(false)
  allowExternalLinks Boolean  @default(true)
  maxMembers         Int      @default(10)
  isPublic           Boolean  @default(false)
  revealGivers       Boolean  @default(true)

  // Theme/Customization
  themeColor    String?
  coverImageUrl String?

  // Post-event processing
  postEventProcessed Boolean @default(false)

  // Ownership
  ownerId String
  owner   User   @relation("BubbleOwner", fields: [ownerId], references: [id])

  // Timestamps
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  archivedAt DateTime?

  // Relations
  members          BubbleMember[]
  wishlists        BubbleWishlist[]
  secretSantaDraws SecretSantaDraw[]
  invitations      Invitation[]
  claims           Claim[]
  activities       Activity[]
  exclusions       SecretSantaExclusion[]

  @@index([ownerId])
  @@index([slug])
  @@index([eventDate])
  @@index([archivedAt])
}

enum OccasionType {
  CHRISTMAS
  BIRTHDAY
  SINTERKLAAS
  WEDDING
  BABY_SHOWER
  GRADUATION
  HOUSEWARMING
  OTHER
}

model BubbleMember {
  id       String     @id @default(cuid())
  bubbleId String
  userId   String
  role     BubbleRole @default(MEMBER)

  notifyActivity Boolean @default(true)

  joinedAt  DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  leftAt    DateTime?

  bubble Bubble @relation(fields: [bubbleId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([bubbleId, userId])
  @@index([bubbleId])
  @@index([userId])
}

enum BubbleRole {
  OWNER
  ADMIN
  MEMBER
}

// ============================================
// WISHLISTS
// ============================================

model Wishlist {
  id          String  @id @default(cuid())
  userId      String
  name        String  @default("My Wishlist")
  description String? @db.Text
  isDefault   Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  items   WishlistItem[]
  bubbles BubbleWishlist[]

  @@index([userId])
}

model BubbleWishlist {
  id         String @id @default(cuid())
  bubbleId   String
  wishlistId String

  isVisible Boolean @default(true)

  attachedAt DateTime  @default(now())
  updatedAt  DateTime? @updatedAt

  bubble   Bubble   @relation(fields: [bubbleId], references: [id], onDelete: Cascade)
  wishlist Wishlist @relation(fields: [wishlistId], references: [id], onDelete: Cascade)

  @@unique([bubbleId, wishlistId])
  @@index([bubbleId])
  @@index([wishlistId])
}

model WishlistItem {
  id         String @id @default(cuid())
  wishlistId String

  title       String
  description String? @db.Text

  price    Decimal? @db.Decimal(10, 2)
  priceMax Decimal? @db.Decimal(10, 2)
  currency String   @default("EUR")

  url      String? @db.Text
  imageUrl String?

  priority  ItemPriority @default(NICE_TO_HAVE)
  quantity  Int          @default(1)
  category  String?
  notes     String?      @db.Text

  sortOrder Int @default(0)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  wishlist Wishlist @relation(fields: [wishlistId], references: [id], onDelete: Cascade)
  claims   Claim[]

  @@index([wishlistId])
  @@index([deletedAt])
}

enum ItemPriority {
  MUST_HAVE
  NICE_TO_HAVE
  DREAM
}

// ============================================
// CLAIMS (THE SECRET SAUCE)
// ============================================

model Claim {
  id       String @id @default(cuid())
  itemId   String
  userId   String
  bubbleId String

  status   ClaimStatus @default(CLAIMED)
  quantity Int         @default(1)

  isGroupGift  Boolean  @default(false)
  contribution Decimal? @db.Decimal(10, 2)

  claimedAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
  purchasedAt DateTime?
  unclaimedAt DateTime?

  expiresAt DateTime?

  item   WishlistItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  user   User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  bubble Bubble       @relation(fields: [bubbleId], references: [id], onDelete: Cascade)

  @@index([itemId])
  @@index([userId])
  @@index([bubbleId])
  @@index([status])
}

enum ClaimStatus {
  CLAIMED
  PURCHASED
  UNCLAIMED
}

// ============================================
// SECRET SANTA
// ============================================

model SecretSantaDraw {
  id         String @id @default(cuid())
  bubbleId   String
  giverId    String
  receiverId String

  excludedUserIds String[]

  drawnAt   DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  viewedAt  DateTime?

  bubble   Bubble @relation(fields: [bubbleId], references: [id], onDelete: Cascade)
  giver    User   @relation("Giver", fields: [giverId], references: [id])
  receiver User   @relation("Receiver", fields: [receiverId], references: [id])

  @@unique([bubbleId, giverId])
  @@unique([bubbleId, receiverId])
  @@index([bubbleId])
  @@index([giverId])
}

model SecretSantaExclusion {
  id       String @id @default(cuid())
  bubbleId String
  userId1  String
  userId2  String

  createdAt DateTime @default(now())

  bubble Bubble @relation(fields: [bubbleId], references: [id], onDelete: Cascade)

  @@unique([bubbleId, userId1, userId2])
  @@index([bubbleId])
}

// ============================================
// INVITATIONS
// ============================================

model Invitation {
  id        String @id @default(cuid())
  bubbleId  String
  email     String
  invitedBy String

  token  String           @unique @default(cuid())
  status InvitationStatus @default(PENDING)

  sentAt     DateTime  @default(now())
  updatedAt  DateTime? @updatedAt
  expiresAt  DateTime
  acceptedAt DateTime?

  bubble  Bubble @relation(fields: [bubbleId], references: [id], onDelete: Cascade)
  inviter User   @relation(fields: [invitedBy], references: [id])

  @@index([bubbleId])
  @@index([email])
  @@index([token])
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
  CANCELLED
}

// ============================================
// NOTIFICATIONS
// ============================================

model Notification {
  id     String @id @default(cuid())
  userId String

  type  NotificationType
  title String
  body  String           @db.Text

  bubbleId String?
  itemId   String?

  data Json?

  readAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([readAt])
  @@index([createdAt])
}

enum NotificationType {
  BUBBLE_INVITATION
  MEMBER_JOINED
  WISHLIST_ADDED
  REMINDER_ADD_WISHLIST
  EVENT_APPROACHING
  EVENT_COMPLETED
  SECRET_SANTA_DRAWN
  ITEM_CLAIMED
  WEEKLY_DIGEST
  SYSTEM
}

// ============================================
// ACTIVITY FEED
// ============================================

model Activity {
  id       String  @id @default(cuid())
  bubbleId String?
  userId   String?

  type     ActivityType
  metadata Json?

  createdAt DateTime @default(now())

  bubble Bubble? @relation(fields: [bubbleId], references: [id], onDelete: Cascade)
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([bubbleId])
  @@index([userId])
  @@index([createdAt])
  @@index([type])
}

enum ActivityType {
  // Auth events
  USER_REGISTERED
  USER_LOGIN
  USER_LOGOUT
  EMAIL_VERIFIED
  PASSWORD_RESET_REQUESTED
  PASSWORD_RESET_COMPLETED
  VERIFICATION_EMAIL_RESENT

  // Member events
  MEMBER_JOINED
  MEMBER_LEFT
  MEMBER_REMOVED
  MEMBER_INVITED
  MEMBER_ROLE_CHANGED
  OWNERSHIP_TRANSFERRED

  // Wishlist events
  WISHLIST_CREATED
  WISHLIST_ATTACHED
  WISHLIST_DETACHED
  ITEM_ADDED
  ITEM_UPDATED
  ITEM_DELETED

  // Claim events
  ITEM_CLAIMED
  ITEM_UNCLAIMED
  ITEM_PURCHASED

  // Group events
  GROUP_CREATED
  GROUP_UPDATED
  GROUP_DELETED
  GROUP_ARCHIVED
  SECRET_SANTA_DRAWN
  SECRET_SANTA_RESET

  // System events
  EVENT_APPROACHING
  EVENT_COMPLETED
  RATE_LIMIT_EXCEEDED

  // Subscription events
  SUBSCRIPTION_CREATED
  SUBSCRIPTION_UPGRADED
  SUBSCRIPTION_DOWNGRADED
  SUBSCRIPTION_CANCELED
  SUBSCRIPTION_RENEWED
  PAYMENT_SUCCEEDED
  PAYMENT_FAILED
  TRIAL_STARTED
  TRIAL_ENDED
  COUPON_APPLIED
}

// ============================================
// ADMIN & SYSTEM
// ============================================

model FeatureFlag {
  id          String  @id @default(cuid())
  key         String  @unique
  description String?

  enabled    Boolean  @default(false)
  enabledFor String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ScrapedProduct {
  id  String @id @default(cuid())
  url String @unique

  title       String?
  description String?  @db.Text
  price       Decimal? @db.Decimal(10, 2)
  currency    String?
  imageUrl    String?

  scrapedAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  expiresAt DateTime

  @@index([url])
  @@index([expiresAt])
}

// ============================================
// CONTACT SUBMISSIONS
// ============================================

model ContactSubmission {
  id String @id @default(cuid())

  name    String
  email   String
  subject ContactSubject
  message String         @db.Text
  locale  String         @default("en") // Language used when submitting the form

  // Metadata for spam protection
  ipAddress      String?
  userAgent      String?
  recaptchaScore Float?

  // Status tracking
  status    ContactStatus @default(NEW)
  handledBy String?
  handledAt DateTime?

  // Comment log for admin notes and replies
  comments ContactComment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
  @@index([email])
}

model ContactComment {
  id           String @id @default(cuid())
  submissionId String
  authorId     String
  authorName   String
  content      String @db.Text
  type         ContactCommentType @default(NOTE)

  createdAt DateTime @default(now())

  submission ContactSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  @@index([submissionId])
}

enum ContactCommentType {
  NOTE
  REPLY
}

enum ContactSubject {
  PRIVACY_REQUEST
  DATA_DELETION
  DATA_EXPORT
  BUG_REPORT
  FEATURE_REQUEST
  GENERAL_INQUIRY
  OTHER
}

enum ContactStatus {
  NEW
  IN_PROGRESS
  RESOLVED
  SPAM
}
